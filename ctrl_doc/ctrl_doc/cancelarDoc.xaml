<Window x:Class="ctrl_doc.cancelarDoc"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ctrl_doc"
        mc:Ignorable="d"
        Title="Cancelar documento" Height="350" Width="500" ResizeMode="NoResize">
    <StackPanel>
        <Label Name="lblttl" FontSize="24" Content="cancelaciones" Margin="0,10,0,0" HorizontalAlignment="Center"></Label>
        <Label Content="Comentarios:" Margin="25,0,0,0"></Label>
        <TextBox Name="txtCom" Margin="25,0,25,0" Height="100" TextWrapping="Wrap" AcceptsReturn="True"></TextBox>
        <Label Content="Autorizo:" Margin="25,10,0,0"></Label>
        <TextBox Name="txtAut" Margin="25,0,25,0" ></TextBox>
        <WrapPanel HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Name="btnvolv" Content="Volver" Margin="0,0,25,0" Click="btnvolv_Click"></Button>
            <Button Name="btnok" Content="Confirmar" Margin="0,0,25,0" Click="btnok_Click"></Button>
        </WrapPanel>
    </StackPanel>
</Window>
