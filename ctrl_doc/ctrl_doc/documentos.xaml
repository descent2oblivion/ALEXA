<Window x:Class="ctrl_doc.documentos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ctrl_doc"
        mc:Ignorable="d"
        Title="documentos" Height="450" Width="800">
    <StackPanel>
        <Label Name="lblTitulo" Content="x" FontSize="24" Margin="0,30,0,0" HorizontalAlignment="Center"/>
        <ScrollViewer MaxHeight="350">
            <DataGrid Name="dgDocumentos"  MaxHeight="350" CanUserResizeRows="False" CanUserResizeColumns="False" IsReadOnly="True" GridLinesVisibility="None">
                <DataGrid.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Editar"></MenuItem>
                        <MenuItem Header="Historial"></MenuItem>
                        <MenuItem Header="Cancelar"></MenuItem>
                        <MenuItem Header="habilitar"></MenuItem>
                    </ContextMenu>
                </DataGrid.ContextMenu>            
            </DataGrid>
        </ScrollViewer>
    </StackPanel>
</Window>
