<UserControl x:Class="ctrl_doc.buscar_doc"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ctrl_doc"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <Label Content="Buscar Documento" HorizontalAlignment="Center" FontSize="24" Margin="0,50,0,0"/>
        <TextBox Name="txtSearchDoc" KeyUp="txtSearchDoc_KeyUp" Width="400" TextWrapping="Wrap" AcceptsReturn="False" Margin="0,30,0,0"/>
        <StackPanel HorizontalAlignment="Center" Margin="0,20,0,0">
            <RadioButton Name="radio_name" Content="Buscar por nombre"/>
            <RadioButton Name="radio_code" Content="Buscar por codigo"/>
        </StackPanel>
    </StackPanel>
</UserControl>
